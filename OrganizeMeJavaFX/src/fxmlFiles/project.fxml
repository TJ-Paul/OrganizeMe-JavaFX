<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ProjectController">
   
   <!-- Header -->
   <HBox styleClass="header" alignment="CENTER_LEFT" spacing="10.0">
      <padding>
         <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
      </padding>
      
      <Label text="ðŸ“‹" styleClass="header-icon" />
      <Label text="Project Manager" styleClass="app-title" />
      
      <Region HBox.hgrow="ALWAYS" />
      
      <Label fx:id="connectionStatus" text="Disconnected" styleClass="connection-status" />
   </HBox>
   
   <Separator />
   
   <!-- Main Content Area -->
   <HBox VBox.vgrow="ALWAYS">
      
      <!-- Left Panel - Tasks and Add Task -->
      <VBox HBox.hgrow="ALWAYS" spacing="0" prefWidth="500">
         
         <!-- Add Task Section -->
         <VBox styleClass="add-task-section" spacing="10">
            <padding>
               <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            
            <Label text="Add New Task" styleClass="section-title" />
            
            <TextField fx:id="taskTitleInput" promptText="Task title..." styleClass="task-input" />
            
            <TextArea fx:id="taskDescriptionInput" promptText="Task description (optional)..." 
                     prefRowCount="2" styleClass="task-input" wrapText="true" />
            
            <Button fx:id="addTaskButton" text="Add Task" onAction="#handleAddTask" 
                    styleClass="add-task-button" />
         </VBox>
         
         <Separator />
         
         <!-- Tasks List -->
         <VBox spacing="5">
            <padding>
               <Insets bottom="10.0" left="15.0" right="15.0" top="10.0" />
            </padding>
            
            <Label text="Project Tasks" styleClass="section-title" />
            
            <ScrollPane fx:id="scrollPane" fitToWidth="true" VBox.vgrow="ALWAYS" 
                       hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="task-scroll">
               <VBox fx:id="taskArea" spacing="10" styleClass="task-area">
                  <padding>
                     <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </padding>
               </VBox>
            </ScrollPane>
         </VBox>
      </VBox>
      
      <Separator orientation="VERTICAL" />
      
      <!-- Right Panel - Chat and Users -->
      <VBox prefWidth="300" styleClass="sidebar">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         
         <!-- User List -->
         <Label text="Team Members" styleClass="sidebar-title" />
         <Label fx:id="userCount" text="0 users online" styleClass="user-count" />
         
         <ListView fx:id="userList" prefHeight="120" styleClass="user-list">
            <padding>
               <Insets top="5.0" />
            </padding>
         </ListView>
         
         <Separator />
         
         <!-- Chat Section -->
         <VBox spacing="5" VBox.vgrow="ALWAYS">
            <padding>
               <Insets top="10.0" />
            </padding>
            
            <Label text="Team Chat" styleClass="sidebar-title" />
            
            <ScrollPane fx:id="chatScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS" 
                       hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="chat-scroll" prefHeight="200">
               <VBox fx:id="chatArea" spacing="5" styleClass="chat-area">
                  <padding>
                     <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </padding>
               </VBox>
            </ScrollPane>
            
            <!-- Message Input -->
            <HBox alignment="CENTER" spacing="5">
               <TextField fx:id="messageInput" promptText="Type message..." 
                         HBox.hgrow="ALWAYS" styleClass="message-input-small" />
               
               <Button fx:id="sendMessageButton" text="Send" onAction="#handleSendMessage" 
                       styleClass="send-button-small" />
            </HBox>
         </VBox>
         
         <Region VBox.vgrow="ALWAYS" />
         
         <Label text="ðŸŸ¢ Connected" styleClass="status-indicator" />
      </VBox>
      
   </HBox>
   
</VBox>